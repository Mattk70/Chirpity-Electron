{
  "name": "Chirpity",
  "version": "5.4.2",
  "description": "Chirpity is a bioacoustics platform for the analysis of bird song and other wildlife sounds. It uses machine learning models to identify bird species from audio recordings.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "docs": "jsdoc -c jsdoc.json",
    "prebuild": "node prebuild.js",
    "preexport": "node prebuild.js",
    "preAppImage": "node prebuild.js",
    "prebuild-mac-x64-pkg": "node prebuild.js",
    "minify": "esbuild ./js/*.js --minify --sourcemap --outdir=./js --allow-overwrite",
    "export": "electron-builder build --m -p always",
    "build-mac-x64-pkg": "electron-builder --mac pkg --x64 --config.mac.target=pkg -p always",
    "AppImage": "electron-builder build --linux --x64  -p always",
    "build": "electron-builder --win --x64 -p always",
    "testBuild": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "test": "playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattk70/Chirpity-Electron.git"
  },
  "build": {
    "appId": "com.electron.chirpity",
    "pkg": {
      "license": "LICENSE.txt"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "LICENSE.txt",
      "installerSidebar": "build/uninstallerSidebar.bmp"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Mattk70",
        "repo": "Chirpity-Electron"
      }
    ],
    "files": [
      "**/*",
      "!test*${/*}",
      "!build*${/*}",
      "!docs*${/*}",
      "!custom*{/*}",
      "!.github${/*}",
      "!.vscode${/*}",
      "!.idea{*/}",
      "!kernels.txt",
      "!prebuild.js",
      "!minify.js",
      "!playwright.*",
      "!dist${/*}",
      "!BirdNet${/*}",
      "!*fixed_roll*${/*}",
      "!Help/example.mp3",
      "!venv${/*}",
      "!custom_tfjs${/*}",
      "!*git*${/*}",
      "!package-lock.json",
      "!jsdoc.json",
      "!prebuild.js",
      "!yarn.lock",
      "!pyproject.toml",
      "!README.md",
      "!saved_model$(/*)",
      "!**/*.*js.map",
      "!**/*.*.md"
    ],
    "extraResources": [
      "./Help/example.mp3"
    ],
    "fileAssociations": [
      {
        "ext": "mp3",
        "name": "MP3 File",
        "role": "Editor"
      },
      {
        "ext": "wav",
        "name": "WAVE File",
        "role": "Editor"
      },
      {
        "ext": "ogg",
        "name": "WAVE File",
        "role": "Editor"
      },
      {
        "ext": "mpga",
        "name": "MPEG Audio File",
        "role": "Editor"
      },
      {
        "ext": "aac",
        "name": "AAC File",
        "role": "Editor"
      },
      {
        "ext": "mpa",
        "name": "MPA File",
        "role": "Editor"
      },
      {
        "ext": "flac",
        "name": "FLAC File",
        "role": "Editor"
      },
      {
        "ext": "mp4",
        "name": "MPEG4 File",
        "role": "Editor"
      }
    ],
    "mac": {
      "target": {
        "target": "pkg",
        "arch": "arm64"
      },
      "icon": "img/icon/icon.icns",
      "category": "public.app-category.utilities",
      "fileAssociations": [
        {
          "ext": [
            "wav",
            "mp3",
            "mpeg",
            "m4a",
            "aac",
            "mpga",
            "ogg",
            "mp4",
            "flac"
          ],
          "description": "Audio files",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "icon": "./build/icon.icns",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false,
      "asar": true,
      "icon": "./img/icon/icon.png"
    }
  },
  "keywords": [
    "Nocmig",
    "Bioacoustics",
    "Bird Calls",
    "Birdsong",
    "DeepLearning",
    "Tensorflow"
  ],
  "author": "Matt Kirkland",
  "license": "CC-BY-NC-SA-4.0",
  "bugs": {
    "url": "https://github.com/mattk70/Chirpity-Electron/issues"
  },
  "homepage": "https://chirpity.mattkirkland.co.uk",
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.9.0",
    "docdash": "^2.0.2",
    "electron": "^39.1.2",
    "electron-builder": "26.0.12",
    "electron-builder-squirrel-windows": "26.0.12",
    "electron-playwright-helpers": "^1.7.1",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "jimp": "^1.6.0",
    "jsdoc": "^4.0.4",
    "playwright": "^1.48.2"
  },
  "dependencies": {
    "@easepick/bundle": "^1.2.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@popperjs/core": "^2.9.2",
    "@tensorflow/tfjs": "4.22.0",
    "@tensorflow/tfjs-backend-webgpu": "4.22.0",
    "@tensorflow/tfjs-core": "4.22.0",
    "@tensorflow/tfjs-node": "4.22.0",
    "bootstrap": "5.2.3",
    "browser-id3-writer": "^4.4.0",
    "chart.js": "^4.4.0",
    "colormap": "^2.3.2",
    "electron-log": "4.4.8",
    "electron-settings": "^4.0.2",
    "electron-updater": "6.6.5",
    "fast-csv": "5.0.5",
    "fast-png": "^6.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "keytar": "^7.9.0",
    "lodash.merge": "^4.6.2",
    "p-limit": "3.1.0",
    "sqlite3": "^5.1.7",
    "suncalc": "^1.9.0",
    "systeminformation": "^5.14.11",
    "utimes": "^5.2.1",
    "uuid": "^8.3.2",
    "wavesurfer.js": "7.9.5"
  },
  "optionalDependencies": {
    "ntsuspend": "^1.0.2"
  }
}
