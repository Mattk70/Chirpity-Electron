{
	"name": "chirpity",
	"version": "2.3.0",
	"description": "Chirpity Nocmig",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"prebuild": "node prebuild.js",
		"preexport": "node prebuild.js",
		"minify": "node minify.js",
		"export": "electron-builder build --linux --x64 --m",
		"build": "electron-builder --win --x64 -p always",
		"postinstall": "electron-builder install-app-deps"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mattk70/Chirpity-Electron.git"
	},
	"build": {
		"appId": "com.electron.chirpity",
		"publish": [
			{
				"provider": "github",
				"owner": "Mattk70",
				"repo": "https://github.com/Mattk70/Chirpity-Electron"
			}
		],
		"files": [
			"**/*",
			"!test*${/*}",
			"!build*${/*}",
			"!custom*{/*}",
			"!.vscode${/*}",
			"!.idea{*/}",
			"!kernels.txt",
			"!prebuild.js",
			"!minify.js",
			"!playwright.*",
			"!dist${/*}",
			"!BirdNet${/*}",
			"!*fixed_roll*${/*}",
			"!Help/example.mp3",
			"!venv${/*}",
			"!custom_tfjs${/*}",
			"!*git*${/*}",
			"!package-lock.json",
			"!yarn.lock",
			"!pyproject.toml",
			"!README.md",
			"!saved_model$(/*)",
			"!**/*.*js.map",
			"!**/*.*.md"
		],
		"extraResources": [
			"./Help/example.mp3"
		],
		"fileAssociations": [
			{
				"ext": "mp3",
				"name": "MP3 File",
				"role": "Editor"
			},
			{
				"ext": "wav",
				"name": "WAVE File",
				"role": "Editor"
			},
			{
				"ext": "ogg",
				"name": "WAVE File",
				"role": "Editor"
			},
			{
				"ext": "mpga",
				"name": "MPEG Audio File",
				"role": "Editor"
			},
			{
				"ext": "aac",
				"name": "AAC File",
				"role": "Editor"
			},
			{
				"ext": "mpa",
				"name": "MPA File",
				"role": "Editor"
			},
			{
				"ext": "flac",
				"name": "FLAC File",
				"role": "Editor"
			},
			{
				"ext": "mp4",
				"name": "MPEG4 File",
				"role": "Editor"
			}
		],
		"mac": {
			"target": {
				"target": "pkg",
				"arch": "arm64"
			},
			"icon": "img/icon/icon.icns",
			"category": "public.app-category.utilities",
			"fileAssociations": [
				{
					"ext": [
						"wav",
						"mp3",
						"mpeg",
						"m4a",
						"aac",
						"mpga",
						"ogg",
						"mp4",
						"flac"
					],
					"description": "Audio files",
					"role": "Viewer"
				}
			]
		},
		"linux": {
			"icon": "./build/icon.icns",
			"target": [
				"AppImage"
			]
		},
		"nsis": {
			"oneClick": true,
			"perMachine": true
		},
		"win": {
			"publish": [
				"github"
			],
			"target": [
				"nsis",
				"portable"
			],
			"verifyUpdateCodeSignature": false,
			"asar": true,
			"icon": "./img/icon/icon.png"
		}
	},
	"keywords": [
		"Nocmig",
		"Bioacoustics",
		"Bird Calls",
		"Birdsong",
		"DeepLearning",
		"Tensorflow"
	],
	"author": "Matt Kirkland",
	"license": "CC-BY-NC-SA-4.0",
	"bugs": {
		"url": "https://github.com/mattk70/Chirpity-Electron/issues"
	},
	"homepage": "https://chirpity.mattkirkland.co.uk",
	"devDependencies": {
		"@playwright/test": "^1.39.0",
		"electron": "27.3.11",
		"electron-builder": "^25.0.5",
		"electron-builder-squirrel-windows": "^25.0.5",
		"electron-playwright-helpers": "^1.6.0",
		"playwright": "^1.39.0",
		"terser": "5.22.0"
	},
	"dependencies": {
		"@easepick/bundle": "^1.2.1",
		"@fast-csv/format": "^4.3.5",
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@popperjs/core": "^2.9.2",
		"@tensorflow/tfjs": "4.21.0",
		"@tensorflow/tfjs-backend-webgpu": "4.21.0",
		"@tensorflow/tfjs-core": "4.21.0",
		"@tensorflow/tfjs-node": "4.21.0",
		"bootstrap": "5.2.3",
		"browser-id3-writer": "^4.4.0",
		"chart.js": "^4.4.0",
		"colormap": "^2.3.2",
		"electron-log": "4.4.8",
		"electron-settings": "^4.0.2",
		"electron-updater": "6.3.0",
		"fast-png": "^6.1.0",
		"fluent-ffmpeg": "^2.1.2",
		"lodash.merge": "^4.6.2",
		"p-limit": "3.1.0",
		"sqlite3": "5.1.6",
		"suncalc": "^1.9.0",
		"utimes": "5.2.1",
		"uuid": "^8.3.2",
		"wavesurfer.js": "6.6.4"
	},
	"optionalDependencies": {
		"ntsuspend": "^1.0.2"
	}
}
