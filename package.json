{
  "name": "Chirpity",
  "version": "5.10.0",
  "description": "Chirpity is a bioacoustics platform for the analysis of bird song and other wildlife sounds. It uses machine learning models to identify bird species from audio recordings.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "docs": "jsdoc -c jsdoc.json",
    "prebuild": "node prebuild.js",
    "preexport": "node prebuild.js",
    "preAppImage": "node prebuild.js",
    "prebuild-mac-x64": "node prebuild.js",
    "minify": "esbuild ./js/*.js --minify --sourcemap --outdir=./js --allow-overwrite",
    "export": "electron-builder build --m -p always",
    "buildMac": "electron-builder build --m -p never",
    "build-mac-x64": "electron-builder --mac --x64 --config.mac.target=default -p always",
    "AppImage": "electron-builder build --linux --x64 -p always",
    "build": "electron-builder --win --x64 -p always",
    "testBuild": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "test": "playwright test",
    "unittest": "npx playwright test test/i18n.spec.ts test/html.spec.ts",
    "asbuild:debug": "asc assembly/index.ts --target debug",
    "asbuild:release": "asc assembly/index.ts --target release",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattk70/Chirpity-Electron.git"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "format": "ULFO",
    "internetEnabled": true
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true,
    "appId": "uk.co.mattkirkland.chirpity.Chirpity",
    "pkg": {
      "license": "LICENSE.txt"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "license": "LICENSE.txt",
      "installerSidebar": "build/uninstallerSidebar.bmp"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Mattk70",
        "repo": "Chirpity-Electron",
        "channel": "latest-${arch}"
      }
    ],
    "afterAllArtifactBuild": "./build/createLegacyYML.js",
    "files": [
      "**/*",
      "!assembly*${/*}",
      "!asconfig.json",
      "!test*${/*}",
      "!build*${/*}",
      "!docs*${/*}",
      "!custom*{/*}",
      "!.github${/*}",
      "!.vscode${/*}",
      "!.idea{*/}",
      "!Dockerfile",
      "!jsdoc.json",
      "!prebuild.js",
      "!playwright.*",
      "!dist${/*}",
      "!Help/example.mp3",
      "!venv${/*}",
      "!custom_tfjs${/*}",
      "!*git*${/*}",
      "!package-lock.json",
      "!jsdoc.json",
      "!prebuild.js",
      "!README.md",
      "!**/*.*js.map",
      "!**/*.c",
      "!**/*.cc",
      "!**/*.h",
      "!**/*.md",
      "!**/*.o",
      "!**/*.ts",
      "!Perch*${/*}",
      "!Perch*",
      "!node_modules/onnxruntime-node/bin/napi-v6/**/*",
      "node_modules/onnxruntime-node/bin/napi-v6/${platform}/${arch}/**/*",
      "!node_modules/onnxruntime-node/bin/napi-v6/${platform}/${arch}/[Dd]*",
      "!node_modules/onnxruntime-node/bin/napi-v6/${platform}/${arch}/libonnxruntime_providers*"
    ],
    "extraResources": [
      "./Help/example.mp3"
    ],
    "fileAssociations": [
      {
        "ext": "mp3",
        "name": "MP3 File",
        "role": "Viewer"
      },
      {
        "ext": "wav",
        "name": "WAVE File",
        "role": "Viewer"
      },
      {
        "ext": "ogg",
        "name": "WAVE File",
        "role": "Viewer"
      },
      {
        "ext": "mpga",
        "name": "MPEG Audio File",
        "role": "Viewer"
      },
      {
        "ext": "aac",
        "name": "AAC File",
        "role": "Viewer"
      },
      {
        "ext": "mpa",
        "name": "MPA File",
        "role": "Viewer"
      },
      {
        "ext": "flac",
        "name": "FLAC File",
        "role": "Viewer"
      },
      {
        "ext": "mp4",
        "name": "MPEG4 File",
        "role": "Viewer"
      }
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      },
      "artifactName": "${productName}-${arch}.${ext}",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "icon": "img/icon/icon.png",
      "category": "public.app-category.utilities",
      "fileAssociations": [
        {
          "ext": [
            "wav",
            "mp3",
            "mpeg",
            "m4a",
            "aac",
            "mpga",
            "ogg",
            "mp4",
            "flac"
          ],
          "description": "Audio files",
          "role": "Viewer"
        }
      ]
    },
    "linux": {
      "icon": "./build/icon.icns",
      "artifactName": "${productName}-${arch}.${ext}",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false,
      "asar": true,
      "icon": "./img/icon/icon.png"
    }
  },
  "keywords": [
    "Nocmig",
    "Bioacoustics",
    "Bird Calls",
    "Birdsong",
    "DeepLearning",
    "Tensorflow"
  ],
  "author": "Matt Kirkland",
  "license": "CC-BY-NC-SA-4.0",
  "bugs": {
    "url": "https://github.com/mattk70/Chirpity-Electron/issues"
  },
  "homepage": "https://chirpity.net",
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.9.0",
    "assemblyscript": "^0.28.9",
    "docdash": "^2.0.2",
    "electron": "^39.2.4",
    "electron-builder": "26.0.12",
    "electron-builder-squirrel-windows": "26.0.12",
    "electron-playwright-helpers": "^1.7.1",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "jimp": "^1.6.0",
    "jsdoc": "^4.0.4",
    "node-abi": "^4.24.0",
    "playwright": "^1.48.2"
  },
  "dependencies": {
    "@easepick/bundle": "^1.2.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@popperjs/core": "^2.9.2",
    "@tensorflow/tfjs": "4.22.0",
    "@tensorflow/tfjs-backend-webgpu": "4.22.0",
    "@tensorflow/tfjs-core": "4.22.0",
    "@tensorflow/tfjs-node": "4.22.0",
    "bootstrap": "5.2.3",
    "browser-id3-writer": "^4.4.0",
    "chart.js": "^4.4.0",
    "colormap": "^2.3.2",
    "electron-log": "4.4.8",
    "electron-settings": "^4.0.2",
    "electron-updater": "^6.6.2",
    "fast-csv": "5.0.5",
    "fast-png": "^6.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "keytar": "^7.9.0",
    "lodash.merge": "^4.6.2",
    "onnxruntime-node": "^1.24.1",
    "p-limit": "3.1.0",
    "sqlite3": "^5.1.7",
    "suncalc": "^1.9.0",
    "systeminformation": "^5.27.14",
    "utimes": "^5.2.1",
    "wavesurfer.js": "7.9.5"
  },
  "optionalDependencies": {
    "ntsuspend": "^1.0.2"
  }
}